{% extends 'base.html.twig' %}

{% block body %}
    <h1>Inscription</h1>

    {{ form_start(form) }}
    {{ form_row(form.email, {'label': 'Email', 'attr': {'placeholder': 'Adresse email...'}}) }}
    {{ form_row(form.username, {'label': 'Pseudo', 'attr': {'placeholder': 'Pseudo ...'}}) }}
    {{ form_row(form.firstname, {'label': 'Prenom', 'attr': {'placeholder': 'Prenom ...'}}) }}
    {{ form_row(form.lastname, {'label': 'Nom', 'attr': {'placeholder': 'Nom ...'}}) }}
    {{ form_row(form.password, {'label': 'Mot de passe', 'attr': {'placeholder': 'Mot de passe ...'}}) }}
    <button type="submit" class="btn btn-success">Inscription</button>
    {{ form_end(form) }}
{% endblock %}