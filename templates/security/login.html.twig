{% extends '/common/layout.html.twig' %}

{% block body %}
<div class="#">
    <div class="row col-sm-12">
            <div class="card card-login">
              <div class="card-body">
                <h1>Connectez-vous</h1>

              <form action="{{ path('security_login') }}" method="post">
                    <div class="form-group">
                        <label>Email</label>
                    <input type="text" class="form-control" required placeholder="Entrer votre email" name="_username" value="{{ lastusername }}">
                    </div>
                    <div class="form-group">
                        <label>Mot de passe</label><br>
                        {% if error %}
                          <small class="text-danger">Mot de passe invalide pour cette email</small>
                        {% endif %}
                        <input type="password" class="form-control" required placeholder="Entrer votre mot de passe" name="_password">
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-warning">Connexion</button>
                    </div>
                    <div class="form-group">
                      <small id="position-small-text">Vous n'avez pas de compte ?</small><br>
                        <a href="{{ path("security_registration") }}" class="btn btn-info">S'incrire</a>
                    </div>
                </form>
              </div>
            </div>
    </div>
</div>
{% endblock %}