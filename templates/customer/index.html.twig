{% extends 'base.html.twig' %}

{% block title %}Hello CustomerController!{% endblock %}

{% block body %}
<h1>Liste des Clients</h1>
<table>
    <tr>
    <th>Nom</th>
    <th>Prénom</th>
    <th>Tel</th>
    <th>Date anniversaire</th>
    <th>Bon de reduction</th>
    <th>Détails/modifications</th>
    <th>Supprimer</th>
    </tr>
    {% for customer in customers %}
    <tr>
    <td>{{ customer.firstname }}</td>
    <td>{{ customer.lastname }}</td>
    <td>{{ customer.phone }}</td>
    <td>{{ customer.BirthDate ? customer.BirthDate|date('d/m/Y') : '' }}</td>
    <td>{{customer.BirthDate ? ((customer.BirthDate|date('d/m'))==("now"|date('d/m')) ? 'imprimer le BR' :'') : '' }}</td>
    <td>Détails/modifications</td>
    <td>Supprimer</td>
    </tr>
    {% endfor %}
 
    
  </table>


{% endblock %}

